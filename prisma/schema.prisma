generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String     @id @default(uuid())
  nome               String
  email              String     @unique
  senha              String
  resetPasswordToken String?    @unique
  salas              UserSala[] @relation("UserSalas")

  @@map("users")
}

model UserSala {
  id     String @id @default(uuid())
  userId String
  salaId String
  role   String // Campo adicional para armazenar o papel do usu√°rio na sala
  user   User   @relation("UserSalas", fields: [userId], references: [id])
  sala   Sala   @relation("UserSalas", fields: [salaId], references: [id])

  @@unique([userId, salaId])
  @@map("user_salas")
}

model Sala {
  id                 String     @id @default(uuid())
  tituloSala         String
  descricaoSala      String?
  cor                String?
  totalMembros       Int
  maximoDeMembros    Int
  tokkenAcesso       String     @unique
  resetPasswordToken String?    @unique
  usuarios           UserSala[] @relation("UserSalas")

  @@map("salas")
}

model Categoria {
  id                String  @id @default(uuid())
  tipoCategoria     String @unique
  descricaoCategoria String?
  porcentagemDepreciacaoCategoria String
  Patrimonio Patrimonio[] @relation("Categoria")

  @@map("categoria")
}

model Patrimonio {
  id                  String  @id @default(uuid())
  tituloPatrimonio    String
  descricaoPatrimonio String?
  codigo              Int
  valorDaAquisicao    Int
  valorFinal          Int
  valorAtual          Int
  situacao            Int
  localizacao         String
  porcentagemDesvalorizacao Int

  categoria  Categoria  @relation("Categoria", fields: [id], references: [id])

  @@map("patrimonios")
}

model Gasto {
  id        String   @id @default(uuid())
  titulo    String
  descricao String?
  preco     Int
  dataGasto DateTime
  repeticao Boolean

  @@map("gastos")
}
